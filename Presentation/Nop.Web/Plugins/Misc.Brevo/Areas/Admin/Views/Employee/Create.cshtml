 @model EmployeeModel


@{
    Layout = "_AdminLayout";
    //page title
    ViewBag.PageTitle = T("Areas.Admin.Employees.Create.AddNew").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Employees");
}

<form asp-controller="Employee" asp-action="Create" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Areas.Admin.Employees.Create.AddNew")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Areas.Admin.Employees.Create.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>